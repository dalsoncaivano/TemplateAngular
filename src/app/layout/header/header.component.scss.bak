:host {
  display: block;
}

.app-title {
  font-size: 1.5rem;
  font-weight: 800;
  letter-spacing: 0.04em;
  color: #fff;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  margin-left: 2rem;
}

:host ::ng-deep .header-toolbar {
  padding: 0 !important;
  background-color: #000;
  border: none;
  color: #fff;
}

:host ::ng-deep .header-toolbar .p-toolbar-group-left,
:host ::ng-deep .header-toolbar .p-toolbar-group-right {
  color: inherit;
}

:host ::ng-deep .header-toolbar .p-toolbar-group-right {
  padding-right: 2rem;
}

:host ::ng-deep .header-menubar {
  background-color: transparent;
  border: none;
  box-shadow: none;
}

:host ::ng-deep .header-menubar .p-menubar-root-list {
  background-color: #050505;
  border-radius: 0;
  padding: 0;
}

:host ::ng-deep .header-menubar .p-submenu-list {
  background-color: #ffffff;
  border-radius: 0.5rem;
  border: 1px solid rgba(0, 0, 0, 0.08);
}

:host ::ng-deep .header-menubar .p-menuitem-content,
:host ::ng-deep .header-menubar .p-menuitem-link {
  background-color: #050505 !important;
  color: #929292;
  font-weight: 500;
  transition: color 0.2s ease;
}

:host-context(.light-theme)
  ::ng-deep
  .header-menubar
  .p-menuitem-content,
:host-context(.light-theme)
  ::ng-deep
  .header-menubar
  .p-menuitem-link {
  background-color: #050505 !important;
  color: #929292;
}

:host-context(.light-theme) ::ng-deep .header-menubar .p-submenu-list {
  background-color: #ffffff;
  border: 1px solid rgba(0, 0, 0, 0.08);
}

:host-context(.light-theme) ::ng-deep .header-menubar .p-submenu-list .p-menuitem-link {
  background-color: #ffffff !important;
  color: #0f172a;
}

:host ::ng-deep .header-menubar .p-menuitem .p-menuitem-link .p-menuitem-text,
:host ::ng-deep .header-menubar .p-menuitem .p-menuitem-link .p-menuitem-icon,
:host ::ng-deep .header-menubar .p-menuitem .p-menuitem-link .p-submenu-icon {
  color: inherit !important;
}

:host ::ng-deep .header-menubar .p-menuitem-link:not(.p-disabled):hover,
:host ::ng-deep .header-menubar .p-menuitem-link:focus {
  color: #ff5315 !important;
}

:host-context(.light-theme)
  ::ng-deep
  .header-menubar
  .p-menuitem-link:not(.p-disabled):hover,
:host-context(.light-theme)
  ::ng-deep
  .header-menubar
  .p-menuitem-link:not(.p-disabled):focus {
  color: #ff5315 !important;
}

:host ::ng-deep .p-togglebutton .p-button,
:host ::ng-deep .p-togglebutton .p-button .p-button-icon {
  color: #929292 !important;
}

:host ::ng-deep .header-menubar .p-menuitem.p-highlight > .p-menuitem-content {
  background-color: rgba(255, 255, 255, 0.08) !important;
  box-shadow: none;
}
